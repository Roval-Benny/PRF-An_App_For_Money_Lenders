<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Main2Activity"
    tools:layout_editor_absoluteY="25dp"
    tools:menu="detail_menu">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat.Light">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorGreen600"
            android:elevation="6dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/colorWhite" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?android:attr/actionBarSize"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_avatar"
                tools:layout_editor_absoluteX="152dp"
                tools:layout_editor_absoluteY="78dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="341dp"
                android:layout_height="128dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150dp"
                app:cardElevation="4dp"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="222dp">

                <TextView
                    android:id="@+id/amountView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="100000"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorGrey" />


                <TextView
                    android:id="@+id/currentView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="195dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="20-25"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/completeTick"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/ic_complete" />

                <TextView
                    android:id="@+id/completedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:layout_marginTop="65dp"
                    android:text="Completed"
                    android:textColor="@color/colorBlack"
                    android:textSize="22sp" />


                <EditText
                    android:id="@+id/amountText"
                    android:layout_width="320dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/text_view_costum"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="150"
                    android:inputType="number" />

                <Button
                    android:id="@+id/okButton"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/save_button2"
                    android:text="Ok"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"

                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="346dp"
                android:layout_height="78dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="65dp"
                app:cardElevation="0dp"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="137dp">

                <TextView
                    android:id="@+id/nameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Royal Benny Puthupparambil"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/codeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:padding="5dp"
                    android:text="{RYB}"
                    android:textColor="@color/colorGrey"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/phoneView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:padding="5dp"
                    android:text="8606518095"
                    android:textColor="@color/colorGrey"
                    android:textSize="15dp" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/dateRecycler"
                android:layout_width="344dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="290dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="357dp" />


        </android.support.v7.widget.CardView>
    </ScrollView>

</android.support.constraint.ConstraintLayout>